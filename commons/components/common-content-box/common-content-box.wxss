.common-content-box {
  margin: 20rpx 0rpx;
  padding-bottom: 32rpx;
}
.common-content-box .content-header {
  padding: 0px 28rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.common-content-box .content-header .title {
  display: flex;
  align-items: center;
}
.common-content-box .content-header .title .title-icon {
  width: 40rpx;
  height: 40rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-catalog@2x.1144a958.png);
  background-size: 172rpx 172rpx;
  margin-right: 10rpx;
}
.common-content-box .content-header .title text {
  font-size: 16px;
  font-weight: bold;
}
.common-content-box .content-header .control {
  display: flex;
  align-items: center;
  color: #9e9e9e;
}
.common-content-box .content-header .control .control-icon {
  height: 32rpx;
  width: 32rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons@2x.02953e71.png);
  background-position: -694rpx -342rpx;
  background-size: 730rpx 644rpx;
  margin-left: 10rpx;
}
.common-content-box .content {
  margin: 0px 28rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.common-item {
  margin: 10rpx 0px;
  width: 212rpx;
}
.common-item .image-box {
  width: 100%;
  height: 212rpx;
}
.common-item .title {
  width: 100%;
  height: 72rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  line-clamp: 2;
  line-height: 36rpx;
  margin: 8rpx 0;
}
.common-item .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.common-item .info .play-count:before {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.f1c29abf.png);
  background-size: 112rpx 110rpx;
  background-position: -88rpx -28rpx;
  height: 20rpx;
  width: 24rpx;
}
.common-item .info .comment-count:after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.f1c29abf.png);
  background-size: 112rpx 110rpx;
  background-position: -88rpx -52rpx;
  height: 20rpx;
  width: 24rpx;
}
.common-item .info .play-count,
.common-item .info .comment-count {
  position: relative;
  padding-left: 30rpx;
  font-size: 11px;
  color: #bdbdbd;
}
.four-item {
  width: 320rpx;
  height: 300rpx;
}
.four-item .image-box {
  width: 100%;
  height: 212rpx;
  border-radius: 20rpx;
  position: relative;
}
.four-item .image-box image {
  width: 100%;
  height: 100%;
}
.four-item .image-box .count {
  position: absolute;
  top: 0;
  right: 0;
  text-align: right;
  padding: 0px 10rpx;
  width: 160rpx;
  height: 40rpx;
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
  color: #fff;
}
.four-item .title {
  color: #616161;
  margin-top: 10rpx;
  width: 100%;
  height: 80rpx;
  word-break: break-all;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -moz-box;
  -moz-box-orient: vertical;
  -moz-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  box-orient: vertical;
  line-clamp: 2;
  line-height: 40rpx;
}
